{% extends '@MarmitsGoogleIdentification/index.html.twig' %}

 {% block css %}

     {{ encore_entry_link_tags('marmits') }}

 {% endblock %}

{% block body %}



<div class="container-fluid">

    <div class="row g-4 ">
        <div class="col-6 offset-3 align-self-center gy-5">

            <div class="private">

            {% if user.email is defined %}
            <h1> Private Page </h1>
                    <ul>

                        {% if user.efreshtoken is defined %}
                            {% if user.refreshtoken != '' %}
                                <li>refreshtoken : {{ user.refreshtoken }}</li>
                            {% endif %}
                        {% endif %}

                        {% if user.expiredin is defined %}
                            <li>expiredin : {{ user.expiredin }}</li>
                        {% endif %}

                        {% if user.expired is defined %}
                            <li>expired : {{ user.expired }}</li>
                        {% endif %}

                        {% if user.picture is defined %}
                            <li><img class="picture" src="{{ user.picture }}" /></li>
                        {% endif %}

                        {% if user.name is defined %}
                            <li><button id="private_info" type="button" class="btn btn-primary mb-3">Infos From API</button></li>
                            <li>name : {{ user.name }}</li>
                        {% endif %}

                         <li class="email">email : {{ user.email }}</li>

                    </ul>

            <div class="infos_user hidden">
                <table class="table table-bordered table-secondary table-sm table-responsive-sm">
                    <tbody>
                        {% for key in user|keys %}
                        <tr>
                            <td>{{ key }}</td> <td>{{ user[key] }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {% endif %}
                <div class="alert alert-danger message hidden" role="alert">

                </div>
            </div>
        </div>
    </div>
</div>
    {% block javascripts %}
        {{ encore_entry_script_tags('marmits') }}
    {% endblock %}

{% endblock %}

